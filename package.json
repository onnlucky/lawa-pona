    "dependencies": {
        "debug": "^4.1.1",
        "ws": "^7.1.2",
        "zigbee-herdsman": "https://github.com/onnlucky/zigbee-herdsman#publish",
        "zigbee-shepherd-converters": "^10"
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
